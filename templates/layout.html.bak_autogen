<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{% endblock %}</title>
    <link rel="icon" type="image/png" href="{{url_for('static', filename='images/favicon.png')}}">

    <!-- Locomotive css Link -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/locomotive-scroll@4.1.4/dist/locomotive-scroll.css">
    <!-- Font Link -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500&family=Roboto:wght@400;700;900&display=swap"
        rel="stylesheet">
    <!-- Icon Link -->
    <link href="https://cdn.jsdelivr.net/npm/remixicon@3.5.0/fonts/remixicon.css" rel="stylesheet">

    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <!-- CSS Link -->
    <link rel="stylesheet" href="{{url_for('static', filename='styles.css')}}">
</head>

<body>
    <nav>
        <div class="navContainer">
            <div class="Column1">
                <a href="{% if email %}
                                /protected_area
                        {% else %}
                                /
                        {% endif %}" class="Logo">
                    <h4>MedLife</h4>
                </a>
            </div>
            <ul id="column2" class="Column2">
                <li><a href="{% if email  %}
                               /protected_area
                            {% else %}
                                /
                            {% endif %}" class="nav-link {% block home_active %}{% endblock %}">
                        <span id="span-icon" class="material-symbols-outlined">
                            home
                        </span>
                        <span id="span-text">Home</span></a></li>
                <li><a href="{{url_for('shop')}}" class="nav-link {% block shop_active %}{% endblock %}">
                        <span id="span-icon" class="material-symbols-outlined">
                            store
                        </span>
                        <span id="span-text">Shop</span></a></li>

                <li><a href="#hero" class="nav-link"><span id="span-icon" class="material-symbols-outlined">
                            account_circle
                        </span>
                        <span id="span-text">Profile</span></a>
                    <ul class="dropdown">
                        {% if email %}

                        <li class="profile-info">
                            <!-- <img class="profile-image" src="{{ picture or url_for('static', filename='images/Dr._Amina_Rahman.jpg') }}"> -->
                            <a href="#">{{email}}</a>
                        </li>
                        {% else: %}
                        <li><a href="#">Guest User</a></li>
                        {% endif %}
                    </ul>
                </li>
                <li {% if email is not defined or email is none %} style="display: none;" {% endif %}>
                    <a href="{{url_for('cart')}}" class="nav-link {% block cart_active %}{% endblock %}"><span
                            id="span-icon" class="material-symbols-outlined">
                            shopping_cart
                        </span>
                        <span id="span-text">Cart</span></a>
                </li>
                <li {% if email is not defined or email is none %} style="display: none;" {% endif %}>
                    <a href="/history" class="nav-link {% block history_active %}{% endblock %}"><span id="span-icon"
                            class="material-symbols-outlined">
                            history
                        </span>
                        <span id="span-text">History</span></a>
                </li>
                {% if email %}
                <li><a href="/Diagnosis" class="nav-link {% block Diagnosis_active %}{% endblock %}" >
                    <span id="span-text">Diagnosis</span></a></li>
                    {% endif %}
                    {% if user_type == 'admin' %}
                    <li><a href="/Admin_Dashboard" class="nav-link {% block Dashboard_active %}{% endblock %}">
                        <span id="span-text">Dashboard</span></a></li>
                    {% endif %}
                    
            </ul>
            <div class="Column3">
                {% if email %}
                <a href="/logout" class="Button" id="logout-btn">Sign out 
                    <span class="material-symbols-outlined">
                    move_item
                    </span>
                </a>
                {% else: %}
                <a href="/login" class="Button">
                    <span class="material-symbols-outlined">
                        input
                        </span>
                        Sign in </a>
                {% endif %}
            </div>
        </div>
    </nav>

    <div id="main">

        {% block body %}
        {% endblock %}

        <div class="footer">
            <div class="Footer4">
                <div class="Content">
                    <div class="Column1">
                        <a href="{% if email %}
                                /protected_area
                        {% else %}
                                /
                        {% endif %}" class="Logo">
                            <h4>MedLife</h4>
                            <div class="Text">A Bangladeshi Website <img
                                    src="{{url_for('static', filename='images/home/flag.png')}}" /></div>
                        </a>

                    </div>
                    <ul class="Column2">
                        <li><a href="#" class="up-footer-link">About Us</a></li>
                        <li><a href="#" class="up-footer-link">Contact Us</a></li>
                        <li><a href="#" class="up-footer-link">FAQs</a></li>
                        <li><a href="#" class="up-footer-link">Shipping</a></li>
                        <li><a href="#" class="up-footer-link">Returns</a></li>
                    </ul>
                    <div class="SocialLinks">
                        <i class="ri-meta-line"></i>
                        <i class="ri-instagram-line"></i>
                        <i class="ri-twitter-x-line"></i>
                        <i class="ri-linkedin-box-fill"></i>
                        <i class="ri-youtube-fill"></i>
                    </div>
                </div>
                <div class="Credits">
                    <div class="Divider"> </div>
                    <div class="Row">
                        <div class="Text">&copy 2023 MedLife. All right reserved.</div>
                        <ul class="FooterLinks">
                            <li><a href="#" class="down-footer-link">Privacy Policy</a></li>
                            <li><a href="#" class="down-footer-link">Terms of Service</a></li>
                            <li><a href="#" class="down-footer-link">Cookies Settings</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </div>

    <!-- Locomotive js Link -->
    <script src="https://cdn.jsdelivr.net/npm/locomotive-scroll@4.1.4/dist/locomotive-scroll.js"></script>
    <!-- JS Link -->
    <script src="{{url_for('static', filename='script.js')}}"></script>

    <!--Start of Tawk.to Script-->
<script type="text/javascript">
    var Tawk_API=Tawk_API||{}, Tawk_LoadStart=new Date();
    (function(){
    var s1=document.createElement("script"),s0=document.getElementsByTagName("script")[0];
    s1.async=true;
    s1.src='https://embed.tawk.to/652ef55ba84dd54dc482472f/1hcvmsrqq';
    s1.charset='UTF-8';
    s1.setAttribute('crossorigin','*');
    s0.parentNode.insertBefore(s1,s0);
    })();
    </script>
    <!--End of Tawk.to Script-->

</body>

</html>